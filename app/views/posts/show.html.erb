<%= render @post %>

<div class="row">
  <div class="col px-5">
    <h3>Comments</h3>
    <hr/>
    <div id="comments">
    <% @comments.each do |comment| %>
      <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
    </div>
  </div>
</div>

<%= render "shared/pagination" %>

<div class="row">
  <div class="col-8 px-5" id="new_comment">
    <h4>Add comment</h4>
      <%= render 'comments/form', user: @post.user, post: @post, comment: Comment.new %>
  </div>
</div>