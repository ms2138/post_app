<div class="col mx-4 my-4 post">
  <%= link_to post, data: { turbo_frame: "_top" } do %>
    <h2><%= post.title %></h2>
  <% end %>

  <p>
    <span><%= link_to post.user.username.upcase, post.user, data: { turbo_frame: "_top" } %> - <%= link_to "#{time_ago_in_words(post.created_at).upcase} AGO", post, class: "me-2", data: { turbo_frame: "_top" } %></span>
  </p>
</div>